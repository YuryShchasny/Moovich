<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            app:cardBackgroundColor="@color/on_background"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    tools:text="Несохраненные изменения" />

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:text="Вы точно хотите покинуть экран? Внесенные изменения не будут сохранены" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/secondaryButton"
                        style="@style/clickable_rounded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_medium"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="9.5dp"
                        android:textColor="@color/white_50"
                        android:textSize="15sp"
                        tools:text="Отмена" />


                    <TextView
                        android:id="@+id/mainButton"
                        style="@style/clickable_rounded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10.5dp"
                        android:textColor="@color/primary"
                        android:textSize="15sp"
                        tools:text="Продолжить" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>