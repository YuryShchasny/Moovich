<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.sb.moovich.core.views.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/shimmerContent"
        android:layout_height="110dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        app:shimmer_auto_start="false"
        app:shimmer_base_alpha="1"
        app:shimmer_base_color="@color/grey2"
        app:shimmer_highlight_color="@color/grey">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:background="@drawable/shimmer_background" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shimmer_background" />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="@drawable/shimmer_background" />

        </LinearLayout>

    </com.sb.moovich.core.views.shimmer.ShimmerFrameLayout>
</layout>