<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.sb.moovich.presentation.search.ui.SearchFragment"
        android:label="@string/search"
        app:route="search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sb.moovich.presentation.home.ui.HomeFragment"
        android:label="@string/title_home"
        app:route="home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_watch_list"
        android:name="com.sb.moovich.presentation.favourites.ui.WatchListFragment"
        android:label="@string/title_watch_list"
        app:route="watch_list"
        tools:layout="@layout/fragment_watch_list" />
    <fragment
        android:id="@+id/navigation_assistant"
        android:name="com.sb.moovich.presentation.gpt.ui.AssistantFragment"
        android:label="@string/assistant"
        app:route="assistant"
        tools:layout="@layout/fragment_assistant" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sb.moovich.presentation.profile.ui.ProfileFragment"
        android:label="@string/profile"
        app:route="profile"
        tools:layout="@layout/fragment_profile" />
</navigation>